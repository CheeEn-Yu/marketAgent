{
    "name": "chat-app",
    "version": "1.0.0",
    "description": "A minimal Electron application",
    "main": "main.mjs",
    "type": "module",
    "scripts": {
        "start": "electron . --no-sandbox",
        "build": "electron-builder"
    },
    "repository": "https://github.com/SunParis/Electron-GUI",
    "keywords": [
        "Electron",
        "quick",
        "start",
        "tutorial",
        "demo"
    ],
    "devDependencies": {
        "electron": "^34.0.0",
        "electron-builder": "^25.1.8"
    },
    "build": {
        "appId": "com.example.chatapp",
        "productName": "ChatApp",
        "files": [
            "main.mjs",
            "index.html",
            "package.json",
            "fonts/**/*",
            "svg/**/*",
            "dist/**/*",
            "node_modules/**/*"
        ],
        "directories": {
            "buildResources": "./"
        },
        "win": {
            "target": "portable"
        },
        "linux": {
            "target": "AppImage"
        }
    }
}
